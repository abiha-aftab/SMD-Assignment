<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            app:srcCompat="@drawable/back1" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="273dp"
            android:layout_height="446dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/abc" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="160dp"
            android:fontFamily="cursive"
            android:text="BLISS"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="250dp"
            android:text="CUSTOMIZED GIFT BASKET DECORATION"
            android:textColor="@color/background"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView22"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="310dp"
            android:fontFamily="casual"
            android:text="We wrap your gifts into beautiful baskets making your moments extra special."
            android:textColor="@color/background" />


        <TextView
            android:id="@+id/textView23"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="415dp"
            android:fontFamily="cursive"
            android:text="Adding a touch of perfection to your loved ones."
            android:textColor="@android:color/background_dark" />
        <TextView
            android:id="@+id/textView24"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="465dp"
            android:fontFamily="cursive"
            android:text="For more details contact: 0300-4145765"
            android:textColor="@android:color/background_dark" />


        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="525dp"
            android:background="@drawable/button_rounded2"
            android:text="Order now" />

    </FrameLayout>
</ScrollView>